<LinearLayout android:id="@+id/LinearLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <Button
        android:id="@+id/randWorkoutCustomize1"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:textColor="@color/UF_BLUE"
        android:textStyle="bold"
        android:text="From All lists"
        android:gravity="center"
        android:onClick="randNumWorkout" />

    <Button
        android:id="@+id/randWorkoutCustomize2"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:textColor="@color/UF_BLUE"
        android:textStyle="bold"
        android:text="From Presets"
        android:gravity="center"
        android:onClick="randPresetNumWorkout" />

</LinearLayout>